.home
  - if current_user
    .new-post-form
      .form-body
        p 新規投稿
        - @post.errors.full_messages.each do |message|
          .form-error
            = message
        = form_for(@post, url: post_path) do |f|
          = f.fields_for :images,@post.images.build do |a|
            = a.label :image_file, "画像をアップロード", class: "input-btn"
            = a.file_field :image_file, class: "image-form"
            = f.text_area :message, class: "textarea", placeholder: "メッセージ"
            = f.submit "投稿する", class: "submit"
    .user-container
      p 現在のログインユーザー名
      = link_to user_page_path(current_user.id) do
        .user-image
        .user-name
          .user-short-name
            = current_user.user_name
          .user-full-name
            = current_user.full_name

  - @users.each do |user|
    - user.posts.each do |post|
      - post.images.each do |image|
        .post-container
          .post-user-name
            = link_to user_page_path(user.id)
              = user.user_name
          .post-image
            = image_tag image.image_file , size: '550x550'
          .post-message
            = post.message
